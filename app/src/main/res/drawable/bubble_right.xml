<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 设置气泡的背景颜色 -->
    <solid android:color="#98E165"/>
    <!-- 设置气泡的圆角半径 -->
    <corners android:radius="18dp"/>
    <!-- 设置气泡的内边距 -->
    <padding android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp"/>
</shape>
